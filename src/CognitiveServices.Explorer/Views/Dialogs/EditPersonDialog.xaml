<ContentDialog
    x:Class="CognitiveServices.Explorer.Views.Dialogs.EditPersonDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="using:CognitiveServices.Explorer.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
    CornerRadius="4" DefaultButton="Primary" Title="Ajouter une personne" BorderThickness="0" PrimaryButtonText="Valider" SecondaryButtonText="Annuler" PrimaryButtonCommand="{x:Bind ViewModel.EditPersonDialogValidateCommand}" PrimaryButtonCommandParameter="{x:Bind PersonWithUserData}" IsPrimaryButtonEnabled="True">
    <Grid MinWidth="300">
        <StackPanel Orientation="Vertical" Spacing="4">
            <TextBox x:Uid="Face_Person_Add_Name" Height="55" Width="355" Text="{x:Bind PersonWithUserData.Name, Mode=TwoWay}" />
            <TextBox x:Uid="Face_Person_Add_Picture" Height="55" Width="355" Text="{x:Bind PersonWithUserData.UserData.PictureUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</ContentDialog>
